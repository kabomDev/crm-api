{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div>
    <a href="{{path('user_add')}} " class="btn btn-primary">ajouter</a>
</div>
<table class="table">
        <table class="table">
        <thead>
            <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>email</th>
            
            <th></th>
            </tr>
        </thead>
        <tbody>
            {% for u in users %}
            <tr>
            <td>{{u.id}}</td>
            <td>{{u.fullName}} </td>
            <td>{{u.email}}</td>
            
            <td>
                <a href="{{path('user_edit',{'id': u.id} )}} " class="btn btn-primary">modifier</a>
                <a href="{{path('user_delete',{'id': u.id} )}}" class="btn btn-danger">supprimer</a>
            </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
